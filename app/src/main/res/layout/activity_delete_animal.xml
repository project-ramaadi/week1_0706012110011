<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/slate_900"
    tools:context=".DeleteAnimalActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/spqlogo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Delete this animal"
        android:textColor="@color/slate_50"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/deleteAnimalView__warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Are you sure that you want to delete this animal?"
        android:textColor="@color/slate_50"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/deleteAnimalView__deleteButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/red_500"
        android:text="DELETE"
        android:textColor="@color/slate_50"
        app:layout_constraintEnd_toEndOf="@+id/deleteAnimalView__warning"
        app:layout_constraintStart_toStartOf="@+id/deleteAnimalView__warning"
        app:layout_constraintTop_toBottomOf="@+id/deleteAnimalView__warning" />

    <Button
        android:id="@+id/deleteAnimalView__cancelButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/teal_700"
        android:text="Cancel"
        android:textColor="@color/slate_50"
        app:layout_constraintEnd_toEndOf="@+id/deleteAnimalView__deleteButton"
        app:layout_constraintStart_toStartOf="@+id/deleteAnimalView__deleteButton"
        app:layout_constraintTop_toBottomOf="@+id/deleteAnimalView__deleteButton" />
</androidx.constraintlayout.widget.ConstraintLayout>